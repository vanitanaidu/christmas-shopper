<head>

  <h4>Welcome, <%= current_user.username.capitalize %></h4>

   <% if @gifts.count >= 2 %>
  <h3> You have <%=@gifts.count%> gifts on your Christmas Gift List.</h3>
   <% else %>
    <h3>  You have <%=@gifts.count%> gift on your Christmas Gift List.</h3>
             <% end %>

</head>

<body>
      <form action="/gifts/new" method="get">
        <input type="submit" value="New Gift">
      </form>

<table>
        <tr>
          <th colspan="10">Christmas Gifts</th>
        </tr>
        <tr>
          <th>No</th>
          <th>Gift Name </th>
          <th>Buy From </th>
          <th>Recipient </th>
          <th>Notes </th>
        </tr>

        <tr>
          <% @gifts.each.with_index(1) do |gift, index| %>
          <a href="/gifts/<%=gift.id%>">
          <td><%=index %></td>
          <td><%= gift.name.capitalize %></td>
          <td><%= gift.where_to_buy.capitalize %></td>
          <td><%= gift.recipient.capitalize %></td>
          <td><%= gift.notes %></td>
        </a>
        </tr>
          <br></br>

      <% end %>
</table>

</body>
